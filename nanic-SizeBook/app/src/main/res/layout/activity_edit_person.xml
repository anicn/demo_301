<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context="com.example.nanic_sizebook.EditPerson">

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Delete Record" />
    <Button
        android:id="@+id/saveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/delete"
        android:text="Save Changes" />
    <ScrollView
        android:id="@+id/personFieldsEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/saveChanges">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date: " />

            <EditText
                android:id="@+id/dateFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="YYYY/MM/DD"
                android:scrollbars="horizontal" />
            <TextView
                android:id="@+id/nameEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Name: " />

            <EditText
                android:id="@+id/nameFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/neckSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Neck: " />

            <EditText
                android:id="@+id/neckSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/bustSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bust: " />

            <EditText
                android:id="@+id/bustSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/chestSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Chest: " />

            <EditText
                android:id="@+id/chestSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/waistSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Waist: " />

            <EditText
                android:id="@+id/waistSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/hipSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hip: " />

            <EditText
                android:id="@+id/hipSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/inseamSizeEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Inseam: " />

            <EditText
                android:id="@+id/inseamSizeFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Length in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/commentEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Comments: " />

            <EditText
                android:id="@+id/commentFieldEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:scrollbars="horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>