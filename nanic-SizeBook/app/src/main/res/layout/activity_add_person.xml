<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context="com.example.nanic_sizebook.AddPerson">

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />

    <ScrollView
        android:id="@+id/personFields"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/save">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date: " />

            <EditText
                android:id="@+id/dateField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="YYYY/MM/DD"
                android:scrollbars="horizontal" />
            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Name: " />

            <EditText
                android:id="@+id/nameField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/neckSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Neck: " />

            <EditText
                android:id="@+id/neckSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/bustSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bust: " />

            <EditText
                android:id="@+id/bustSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/chestSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Chest: " />

            <EditText
                android:id="@+id/chestSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/waistSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Waist: " />

            <EditText
                android:id="@+id/waistSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/hipSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hip: " />

            <EditText
                android:id="@+id/hipSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Circumference in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/inseamSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Inseam: " />

            <EditText
                android:id="@+id/inseamSizeField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Length in inches"
                android:scrollbars="horizontal" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Comments: " />

            <EditText
                android:id="@+id/commentField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:scrollbars="horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>